@{
	ViewData["Title"] = "教室管理 查詢";
}
<link rel="stylesheet" href="~/css/QueryRoomManage.css" />

<h1>&nbsp;&nbsp;&nbsp;教室管理 查詢</h1>
<hr>
<br>
	&nbsp;&nbsp;&nbsp;
